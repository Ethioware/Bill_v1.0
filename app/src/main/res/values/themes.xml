<?xml version="1.0"?>

<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->


    <style name="Theme.BILL" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->


        <item name="colorPrimary">@color/gray</item>

        <item name="colorPrimaryVariant">#B3000000</item>

        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->


        <item name="colorSecondary">@color/white</item>

        <item name="colorSecondaryVariant">#C1C1C1</item>

        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:windowTranslucentStatus">true</item>

        <!-- Customize your theme here. -->
    <item name="android:windowAnimationStyle">@style/anim</item>

    </style>
    <style name="anim">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
</resources>